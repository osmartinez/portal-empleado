<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Nueva clave</h3>
        </div>
        <div class="card-body">
          <form action="/dashboard/cambiar_clave" method="POST" id="form">
            <div class="form-group">
              <input type="password" data-minlength="8" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
               title="Al menos 8 caracteres con minúsculas, mayúsculas y números"
                 name="password" placeholder="Nueva contraseña"
                  id = "password"
                  class="form-control" autofocus required>
            </div>
            <div class="form-group">
              <input type="password" data-minlength="8" 
              id = "confirm_password"
              pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
               title="Al menos 8 caracteres con minúsculas, mayúsculas y números"
                 name="confirm_password" placeholder="Repite contraseña" class="form-control" required>
              <span id='msg'></span>

            </div>
            <button class="btn btn-success btn-block" id="btnCambiar">
              Cambiar
            </button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<script>
  var input_pwd = document.getElementById('password')
  var input_confirmpwd = document.getElementById('confirm_password')
  var btCambiar = document.getElementById('btnCambiar')
  var msg = document.getElementById('msg')

  input_pwd.addEventListener('keyup',comparePwd)
  input_confirmpwd.addEventListener('keyup',comparePwd)

  function comparePwd(){
      if((input_pwd.value.trim() !='' && input_confirmpwd.value.trim()!='')&& input_pwd.value==input_confirmpwd.value){
        msg.innerHTML = ""
        btCambiar.disabled = false
      }
      else{
        msg.innerHTML ="Las claves no coinciden"
        msg.style.color = 'red'
        btCambiar.disabled = true
      }
  }

</script>