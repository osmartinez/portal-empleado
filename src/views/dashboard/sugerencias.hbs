<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 pb-5">


            <!--Form with header-->

            <form action="/dashboard/sugerencias" method="post">
                <div class="card rounded-0">
                    <div class="card-header p-0">
                        <div class="text-center py-2">
                            <h4><i class="fa fa-envelope"></i> Formulario anónimo</h4>
                        </div>
                    </div>
                    <div class="card-body p-3">

                        <!--Body-->

                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-envelope text-info"></i></div>
                                </div>
                                <input type="text" class="form-control" id="asunto" name="subject" placeholder="Asunto"
                                    required>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-comment text-info"></i></div>
                                </div>
                                <textarea class="form-control" name="body" placeholder="Envíanos tu mensaje" required></textarea>
                            </div>
                        </div>

                        <button class="btn btn-success btn-block">
                            Enviar
                        </button>
                    </div>

                </div>
            </form>
            <!--Form with header-->


        </div>
    </div>
</div>